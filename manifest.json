{
  "manifest_version": 3,
  "name": "LeetCode to GitHub Sync",
  "version": "1.0.0",
  "description": "Automatically sync your LeetCode submissions to a GitHub repository",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.com/submissions/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
